<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        tools:layout="@layout/fragment_main"
        android:id="@+id/mainFragment"
        android:name="com.example.cleanarchitecturehomework.ui.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_userCreateFragment"
            app:destination="@id/userCreateFragment" />
    </fragment>

    <dialog
        tools:layout="@layout/fragment_user_create"
        android:id="@+id/userCreateFragment"
        android:name="com.example.cleanarchitecturehomework.ui.UserCreateFragment"
        android:label="UserCreateFragment" >
        <action
            android:id="@+id/action_userCreateFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </dialog>

</navigation>